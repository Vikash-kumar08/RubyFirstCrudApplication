<h><strong> Users Listing Page </strong> </h>
<br/>
<br/>
<%= link_to '<i class="glyphicon glyphicon-plus"></i> Create New User'.html_safe, new_user_path, class: 'btn btn-default' %>
<br/>
<br/>
<table>
  <thead>
  <tr>
    <th class="text-center">UserId</th>
    <th class="text-center">Username</th>
    <th class="text-center">Email</th>

    <th colspan="4" class="text-center">Action</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= best_in_place user, :id %></td>
      <td><%= best_in_place user, :username %></td>
      <td><%= best_in_place user, :email %></td>

      <td><%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, user_path(user.id), method: :get, class: 'btn btn-default' %></td>
      <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_user_path(user.id), class: 'btn btn-default' %></td>
      <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, user_path(user.id), method: :delete, class: 'btn btn-default',data: {confirm: "Are you sure?"} %></td>
      <td><%= link_to '<i class="glyphicon glyphicon-eye-open"></i> articles'.html_safe, user_articles_path(user.id), class: 'btn btn-default' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br/>
<br/>


<%= link_to 'Return to articles listing', articles_path %>
